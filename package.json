{
  "name": "agent-snap",
  "version": "0.1.0-beta.1",
  "description": "Framework-agnostic DOM snapshot for coding agents",
  "homepage": "https://github.com/vampaz/agent-snap#readme",
  "bugs": {
    "url": "https://github.com/vampaz/agent-snap/issues"
  },
  "license": "MIT",
  "author": "Carlos Rodrigues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vampaz/agent-snap.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:ext": "npm run build && rm -rf extension/dist && cp -R dist extension/dist",
    "package:ext": "npm run build:ext && cd extension && zip -r ../extension.zip . -x '*.git*' -x '*.DS_Store*'",
    "generate:assets": "npx tsx scripts/generate-assets.ts",
    "generate:demo": "npx tsx scripts/generate-demo.ts",
    "prepare": "husky install",
    "lint": "oxlint",
    "lint:check": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "format": "oxfmt",
    "format:fix": "oxfmt",
    "watch": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "oxfmt": "^0.26.0",
    "oxlint": "^1.42.0",
    "playwright": "^1.58.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
