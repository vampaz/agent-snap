{
  "name": "agent-snap",
  "version": "0.3.0",
  "description": "Framework-agnostic DOM snapshot for coding agents",
  "homepage": "https://github.com/vampaz/agent-snap#readme",
  "bugs": {
    "url": "https://github.com/vampaz/agent-snap/issues"
  },
  "license": "MIT",
  "author": "Carlos Rodrigues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vampaz/agent-snap.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:ext": "npm run build && rm -rf extension/dist && cp -R dist extension/dist",
    "package:ext": "node scripts/sync-extension-version.mjs && npm run build:ext && cd extension && zip -r ../agent-snap-extension-v$(node -p \"require('../package.json').version\").zip . -x '*.git*' -x '*.DS_Store*'",
    "generate:assets": "npx tsx scripts/generate-assets.ts",
    "generate:demo": "npx tsx scripts/generate-demo.ts",
    "prepare": "husky install",
    "lint": "oxlint",
    "lint:check": "oxlint",
    "lint:fix": "oxlint --fix",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "format": "oxfmt",
    "format:fix": "oxfmt",
    "watch": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.2.0",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "jsdom": "^28.0.0",
    "oxfmt": "^0.28.0",
    "oxlint": "^1.43.0",
    "playwright": "^1.58.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18"
  }
}
